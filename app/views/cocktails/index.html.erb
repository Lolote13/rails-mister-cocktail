
<%= render 'components/banner' %>


<div class="container">

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail) do %>
        <% if !cocktail[:photo].nil? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo %>');">
        <% else %>
          <div class="card">
        <% end %>
            <div class="card-category"><%=  cocktail.name.capitalize %></div>
          </div>
          <% end %>
      </div>
    <% end %>
  </div>
  <br>
</div>

<%= link_to "Create new cocktail", new_cocktail_path, {class: "btn btn-primary center-block"} %>
    <br>



